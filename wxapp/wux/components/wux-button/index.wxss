.wux-button{position:relative;display:inline-block;box-sizing:border-box;margin:0;padding:0 24rpx;min-width:104rpx;min-height:88rpx;border:2rpx solid transparent;border-radius:8rpx;vertical-align:middle;text-align:center;text-overflow:ellipsis;font-size:32rpx;line-height:84rpx;cursor:pointer}
.wux-button:after{
  content:"";width:100%;height:100%;position:absolute;top:-12rpx;right:-12rpx;bottom:-12rpx;left:-12rpx;border:none;transform:none;transform-origin:0 0;box-sizing:border-box;border-radius:0
}
.wux-button--light{border-color:transparent;background-color:#e6e6e6;color:#444}
.wux-button--large{padding:0 32rpx;min-width:136rpx;min-height:118rpx;font-size:40rpx;line-height:106rpx}
.wux-button--block{display:block;clear:both}
.wux-button--disabled{opacity:.4}